# NBD Server Configuration
# Copy this file to .env and customize for local development
# .env file is gitignored and won't be committed

# Export name (REQUIRED)
NBD_EXPORT_NAME=my-disk

# Server configuration
NBD_HOST=localhost
NBD_PORT=10809
NBD_SIZE=1GB

# S3 Configuration
NBD_S3_ENDPOINT=http://localhost:9000
NBD_S3_ACCESS_KEY=minioadmin
NBD_S3_SECRET_KEY=minioadmin
NBD_S3_BUCKET=nbd-storage
NBD_S3_REGION=us-east-1

# Logging
NBD_LOG_LEVEL=INFO
